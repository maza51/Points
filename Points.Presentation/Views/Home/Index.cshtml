@{
    ViewData["Title"] = "Home Page";
}

<div>
    <div>
        <h4>Добавить комментарий:</h4 >
        <div class="form-inline" style="width: 900px">
            <div class="form-group mr-3">
                <label for="point-select" class="mr-2">Point Id:</label>
                <select class="form-control" id="point-select"></select>
            </div>
            <div class="form-group mr-3">
                <label for="comment-input" class="mr-2">Комментарий:</label>
                <input type="text" class="form-control" id="comment-input"/>
            </div>
            <div class="form-group mr-3">
                <label for="color-select" class="mr-2">Цвет:</label>
                <select class="form-control" id="color-select">
                    <option value="#FFD700">Желтый</option>
                    <option value="#FF4500">Красный</option>
                    <option value="#FFFFFF">Белый</option>
                </select>
            </div>
            <div class="">
                <button type="button" class="btn btn-primary btn-md" id="add-comment-button">Добавить</button>
            </div>
        </div>
    </div>
    <hr/>
    <div>
        <button type="button" class="btn btn-primary btn-md" id="add-button">
            Создать точку
        </button>
        <div id="stage-container"></div>
    </div>
</div>

